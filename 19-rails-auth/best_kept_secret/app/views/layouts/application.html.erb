<!DOCTYPE html>
<html>
  <head>
    <title>BestKeptSecret</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:authorized] %>
      <p style="color: red;"><%= flash[:authorized] %></p>
    <% end %>

    <div class='header'>     
      <div>
        <h1> <%= link_to "BestKeptSecret", users_path %> </h1>
        <h2> A place for all your secrets </h2>
        <h3> Totally Secure &copy;&reg;</h3>
      </div>

      <div>
        <% if logged_in? %>
          <p> You are logged in as <%= current_user.username %> </p>
          <p> <%= link_to "Log out", logout_path, method: "post" %> </p>
        <% else %>
          <p> You are not logged in. </p>
          <p> <%= link_to "Log in?", login_path %> </p>
        <% end %>
      </div>
    </div>
    <hr />

    <div class='main-content'>
      <%= yield %>
    </div>
  </body>
</html>
